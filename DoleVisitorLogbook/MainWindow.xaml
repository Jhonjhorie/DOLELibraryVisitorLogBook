<Window x:Class="DoleVisitorLogbook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoleVisitorLogbook"
        mc:Ignorable="d"
        Title="DOLE Library Visitor Logbook" Height="700" Width="1200">
    <Grid>
        <!-- Sidebar -->
        <StackPanel Background="#003A6F" Width="220" HorizontalAlignment="Left">
            <TextBlock Text="DOLE Library" Foreground="White" FontSize="20" Margin="10"/>
            <Button Content="🏠 Dashboard" Name="btnDashboard" Margin="10" Click="BtnDashboard_Click"/>
            <Button Content="➕ Add Visitor" Name="btnAddVisitor" Margin="10" Click="BtnAddVisitor_Click"/>
            <Button Content="📋 Visitor Logbook" Name="btnVisitorLogbook" Margin="10" Click="BtnVisitorLogbook_Click"/>
            <Button Content="📊 Reports" Name="btnReports" Margin="10" Click="btnReports_Click"/>
            <Button Content="⚙️ Settings" Name="btnSettings" Margin="10" Click="btnSettings_Click"/>
            <Button Content="⚙️ Logbook" Name="BtnVisitor" Margin="10" Click="BtnVisitor_Click"/>
            <Button Content="⚙️ QR Code" x:Name="BtnQrcode" Margin="10" Click="BtnQrcode_Click"/>

            <Button Content="🔒 Logout" VerticalAlignment="Bottom" Margin="10" Click="BtnLogout_Click"/>
        </StackPanel>
        
        <!-- Top Navbar -->
        <DockPanel Background="#003A6F" Height="60" VerticalAlignment="Top" Margin="220,0,0,0">
            <TextBlock Text="DOLE Library Visitors Logbook" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="20,0"/>
            <TextBlock x:Name="lblDateTime" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>
        </DockPanel>

        <!-- Main Content Area -->
        <Grid Margin="220,60,0,0" Background="#F1F3F4" Name="MainContent"/>
    </Grid>
</Window>
