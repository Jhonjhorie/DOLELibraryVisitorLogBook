<Window x:Class="DoleVisitorLogbook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoleVisitorLogbook"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="DOLE Library Visitor Logbook" 
        Height="700" 
        Width="1200"
        Background="#F1F3F4"
        Icon="/Resources/dole_logo.ico">

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="8"
                                Margin="10,5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#004A8F"/>
                </Trigger>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="#5C6BC0"/>
                    <Setter Property="BorderThickness" Value="0,0,4,0"/>
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <Border Background="#003A6F" Width="240" HorizontalAlignment="Left">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" 
                                  ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header Section -->
                <Border Grid.Row="0" 
                        Background="#002A5F" 
                        Padding="15"
                        Margin="10,10,10,15">
                    <StackPanel>
                        <Border Background="White"
                                CornerRadius="100"
                                Width="80"
                                Height="80"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,10">
                            <Image Source="pack://application:,,,/Resources/dole_logo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3"/>

                        </Border>
                        <TextBlock Text="DOLE Library" 
                                   Foreground="White" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Management System" 
                                   Foreground="#B0BEC5" 
                                   FontSize="11" 
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <Button x:Name="btnDashboard" 
                            Content="🏠 Dashboard" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnDashboard_Click"/>

                    <Button x:Name="btnVisitorLogbook" 
                            Content="📝 Visitor Logbook" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnVisitor_Click"/>

                    <Button x:Name="btnManageLogbook" 
                            Content="📋 Manage Records" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnManageLogbook_Click"/>

                    <Button x:Name="btnReports"

                            Content="📊 Reports &amp; Analytics" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnReports_Click"/>

                    <Button x:Name="btnSettings" 
                            Content="⚙️ Settings" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnSettings_Click"/>

                    <Button x:Name="btnQrCode" 
                            Content="📱 QR Code Generator" 
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnQrcode_Click"
                            Visibility="Collapsed"/>
                </StackPanel>

                <!-- Logout Button at Bottom -->
                <Border Grid.Row="2" 
                        Background="#002A5F" 
                        Margin="10,10,10,15"
                        CornerRadius="8">
                    <StackPanel>
                        <Separator Background="#004A8F" Margin="10,5"/>

                        <StackPanel Orientation="Horizontal" 
                                    Margin="15,10">
                            <Border Background="#5C6BC0"
                                    CornerRadius="20"
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,10,0">
                                <TextBlock Text="👤"
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="txtCurrentUser"
                                           Text="Administrator"
                                           Foreground="White"
                                           FontSize="13"
                                           FontWeight="Bold"/>
                                <TextBlock Text="Admin Account"
                                           Foreground="#B0BEC5"
                                           FontSize="10"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Content="🔒 Logout" 
                                Style="{StaticResource LogoutButtonStyle}"
                                Click="BtnLogout_Click"
                                Margin="5,5,5,10"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Top Navbar -->
        <Border Background="#003A6F" 
                Height="70" 
                VerticalAlignment="Top" 
                Margin="240,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" 
                                  ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#5C6BC0"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="0,0,15,0">
                        <TextBlock x:Name="txtPageTitle"
                                   Text="Dashboard"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                    </Border>

                    <TextBlock x:Name="txtPageDescription"
                               Text="Overview of visitor activity and statistics"
                               Foreground="#B0BEC5"
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center">
                    <!-- Quick Actions -->
                    <Button x:Name="btnQuickCheckIn"
                            Content="⚡ Quick Check-In"
                            Background="#43A047"
                            Foreground="White"
                            FontSize="12"
                            FontWeight="Bold"
                            Height="38"
                            Padding="15,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="BtnQuickCheckIn_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Date/Time Display -->
                    <Border Background="#E8EAF6"
                            CornerRadius="8"
                            Padding="15,8">
                        <StackPanel>
                            <TextBlock x:Name="lblDateTime" 
                                       Foreground="#3F51B5" 
                                       FontSize="14"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="lblDayOfWeek"
                                       Foreground="#5C6BC0"
                                       FontSize="11"
                                       HorizontalAlignment="Center"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Margin="240,70,0,0" 
                Background="#F1F3F4">
            <Grid x:Name="MainContent" Margin="10"/>
        </Border>
    </Grid>
</Window>