<UserControl x:Class="DoleVisitorLogbook.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="#F1F3F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Dashboard Overview" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#003A6F"/>
            <TextBlock Text="Monitor library visitor activity and statistics" 
                       FontSize="14" 
                       Foreground="#666666" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Today's Visitors Card -->
            <Border Grid.Column="0" Background="White" 
                    CornerRadius="8" Margin="0,0,10,0" 
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📅" FontSize="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="Today's Visitors" 
                               FontSize="14" 
                               Foreground="#666666" 
                               Margin="0,10,0,5"/>
                    <TextBlock x:Name="txtTodayVisitors" 
                               Text="124" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="#003A6F"/>
                    <TextBlock Text="+12% from yesterday" 
                               FontSize="12" 
                               Foreground="#4CAF50" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- This Week Card -->
            <Border Grid.Column="1" Background="White" 
                    CornerRadius="8" Margin="0,0,10,0" 
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="This Week" 
                               FontSize="14" 
                               Foreground="#666666" 
                               Margin="0,10,0,5"/>
                    <TextBlock x:Name="txtWeekVisitors" 
                               Text="847" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="#003A6F"/>
                    <TextBlock Text="+8% from last week" 
                               FontSize="12" 
                               Foreground="#4CAF50" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- This Month Card -->
            <Border Grid.Column="2" Background="White" 
                    CornerRadius="8" Margin="0,0,10,0" 
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📈" FontSize="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="This Month" 
                               FontSize="14" 
                               Foreground="#666666" 
                               Margin="0,10,0,5"/>
                    <TextBlock x:Name="txtMonthVisitors" 
                               Text="3,421" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="#003A6F"/>
                    <TextBlock Text="+15% from last month" 
                               FontSize="12" 
                               Foreground="#4CAF50" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Active Now Card -->
            <Border Grid.Column="3" Background="White" 
                    CornerRadius="8" 
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="Active Now" 
                               FontSize="14" 
                               Foreground="#666666" 
                               Margin="0,10,0,5"/>
                    <TextBlock x:Name="txtActiveVisitors" 
                               Text="32" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="#FF9800"/>
                    <TextBlock Text="Currently in library" 
                               FontSize="12" 
                               Foreground="#666666" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts and Recent Activity -->
        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Visitor Trends Chart -->
            <Border Grid.Column="0" Background="White" 
                    CornerRadius="8" Margin="0,0,10,0" 
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Visitor Trends (Last 7 Days)" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#003A6F" 
                               Margin="0,0,0,20"/>

                    <!-- Simple Bar Chart Visualization -->
                    <Grid Height="250">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Bars -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                            <Rectangle Fill="#003A6F" Height="120" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="Mon" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="95" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#003A6F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="5">
                            <Rectangle Fill="#003A6F" Height="140" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="Tue" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="112" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#003A6F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="5">
                            <Rectangle Fill="#003A6F" Height="160" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="Wed" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="128" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#003A6F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" VerticalAlignment="Bottom" Margin="5">
                            <Rectangle Fill="#003A6F" Height="135" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="Thu" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="108" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#003A6F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" VerticalAlignment="Bottom" Margin="5">
                            <Rectangle Fill="#003A6F" Height="175" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="Fri" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="140" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#003A6F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="5" VerticalAlignment="Bottom" Margin="5">
                            <Rectangle Fill="#4CAF50" Height="90" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="Sat" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="72" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="6" VerticalAlignment="Bottom" Margin="5">
                            <Rectangle Fill="#4CAF50" Height="155" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="Sun" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="124" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recent Activity -->
            <Border Grid.Column="1" Background="White" 
                    CornerRadius="8" 
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Recent Check-ins" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#003A6F" 
                               Margin="0,0,0,15"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="280">
                        <StackPanel>
                            <!-- Activity Item 1 -->
                            <Border BorderBrush="#E0E0E0" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="0,10">
                                <StackPanel>
                                    <TextBlock Text="Juan Dela Cruz" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"/>
                                    <TextBlock Text="Student • 10:23 AM" 
                                               Foreground="#666666" 
                                               FontSize="12" 
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Activity Item 2 -->
                            <Border BorderBrush="#E0E0E0" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="0,10">
                                <StackPanel>
                                    <TextBlock Text="Maria Santos" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"/>
                                    <TextBlock Text="Faculty • 10:18 AM" 
                                               Foreground="#666666" 
                                               FontSize="12" 
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Activity Item 3 -->
                            <Border BorderBrush="#E0E0E0" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="0,10">
                                <StackPanel>
                                    <TextBlock Text="Pedro Garcia" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"/>
                                    <TextBlock Text="Visitor • 10:15 AM" 
                                               Foreground="#666666" 
                                               FontSize="12" 
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Activity Item 4 -->
                            <Border BorderBrush="#E0E0E0" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="0,10">
                                <StackPanel>
                                    <TextBlock Text="Ana Reyes" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"/>
                                    <TextBlock Text="Student • 10:12 AM" 
                                               Foreground="#666666" 
                                               FontSize="12" 
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Activity Item 5 -->
                            <Border BorderBrush="#E0E0E0" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="0,10">
                                <StackPanel>
                                    <TextBlock Text="Carlos Lopez" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"/>
                                    <TextBlock Text="Faculty • 10:08 AM" 
                                               Foreground="#666666" 
                                               FontSize="12" 
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Activity Item 6 -->
                            <Border Padding="0,10">
                                <StackPanel>
                                    <TextBlock Text="Sofia Torres" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"/>
                                    <TextBlock Text="Student • 10:05 AM" 
                                               Foreground="#666666" 
                                               FontSize="12" 
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>