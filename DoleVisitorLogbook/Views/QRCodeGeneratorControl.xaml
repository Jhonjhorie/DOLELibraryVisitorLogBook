<UserControl x:Class="DoleVisitorLogbook.Views.QRCodeGeneratorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#E8EAF6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Form -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="12" 
                Margin="20"
                Padding="30"
                BorderBrush="#5C6BC0"
                BorderThickness="0,3,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#9FA8DA" BlurRadius="15" 
                                  ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                        <Border Background="#5C6BC0" 
                                CornerRadius="8" 
                                Width="45" 
                                Height="45" 
                                Margin="0,0,15,0">
                            <TextBlock Text="🔳" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="QR Code Generator" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#3F51B5"/>
                            <TextBlock Text="Create visitor QR codes for quick check-in"
                                       FontSize="12"
                                       Foreground="#757575"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Name Field -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="👤 Full Name *" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#5C6BC0"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="txtName" 
                                 Height="40" 
                                 FontSize="14"
                                 Padding="12"
                                 BorderBrush="#9FA8DA"
                                 BorderThickness="2">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#5C6BC0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock x:Name="txtNameError" 
                                   Text="⚠ Name is required" 
                                   Foreground="#E53935" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Gender Field -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="⚥ Gender *" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#5C6BC0"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="cbGender" 
                                  Height="40" 
                                  FontSize="14"
                                  Padding="12,10"
                                  BorderBrush="#9FA8DA"
                                  BorderThickness="2">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>
                        <TextBlock x:Name="txtGenderError" 
                                   Text="⚠ Gender is required" 
                                   Foreground="#E53935" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Client Type Field -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="🏷️ Client Type *" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#5C6BC0"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="cbClientType" 
                                  Height="40" 
                                  FontSize="14"
                                  Padding="12,10"
                                  BorderBrush="#9FA8DA"
                                  BorderThickness="2">
                            <ComboBoxItem Content="Student"/>
                            <ComboBoxItem Content="Faculty"/>
                            <ComboBoxItem Content="Guest"/>
                        </ComboBox>
                        <TextBlock x:Name="txtClientTypeError" 
                                   Text="⚠ Client type is required" 
                                   Foreground="#E53935" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Office Field -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="🏢 Office/Institution *" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#5C6BC0"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="txtOffice" 
                                 Height="40" 
                                 FontSize="14"
                                 Padding="12"
                                 BorderBrush="#9FA8DA"
                                 BorderThickness="2">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#5C6BC0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock x:Name="txtOfficeError" 
                                   Text="⚠ Office/Institution is required" 
                                   Foreground="#E53935" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Purpose Field -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="📝 Purpose of Visit *" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#5C6BC0"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="txtPurpose" 
                                 Height="80" 
                                 FontSize="14"
                                 Padding="12"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 BorderBrush="#9FA8DA"
                                 BorderThickness="2">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#5C6BC0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock x:Name="txtPurposeError" 
                                   Text="⚠ Purpose is required" 
                                   Foreground="#E53935" 
                                   FontSize="11" 
                                   Margin="0,5,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="🗑️ Clear All"
                                Height="45"
                                Margin="0,0,8,0"
                                Background="White"
                                Foreground="#757575"
                                FontSize="14"
                                FontWeight="SemiBold"
                                BorderBrush="#BDBDBD"
                                BorderThickness="2"
                                Cursor="Hand"
                                Click="BtnClear_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                            <Setter Property="BorderBrush" Value="#9E9E9E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="1"
                                Content="🔳 Generate QR Code"
                                Height="45"
                                Margin="8,0,0,0"
                                Background="#5C6BC0"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnGenerate_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3F51B5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - QR Code Display -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="12" 
                Margin="0,20,20,20"
                Padding="25"
                BorderBrush="#7E57C2"
                BorderThickness="0,3,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#9FA8DA" BlurRadius="15" 
                                  ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Preview Header -->
                <Border Background="#EDE7F6"
                        CornerRadius="8"
                        Padding="15,10,15,10"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="📱 QR Code Preview" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#673AB7"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Scan with any QR code reader"
                                   FontSize="11"
                                   Foreground="#9575CD"
                                   HorizontalAlignment="Center"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- QR Code Image Container -->
                <Border x:Name="qrCodeBorder"
                        BorderBrush="#B39DDB"
                        BorderThickness="3"
                        CornerRadius="12"
                        Padding="20,20,20,20"
                        Background="White"
                        Width="300"
                        Height="300"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#B39DDB" BlurRadius="10" 
                                          ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>

                    <Grid>
                        <!-- Placeholder when no QR code -->
                        <StackPanel x:Name="placeholderPanel"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Text="🔳" 
                                       FontSize="80" 
                                       HorizontalAlignment="Center"
                                       Opacity="0.3"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="No QR Code Yet" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="#BDBDBD"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Fill the form and click Generate" 
                                       FontSize="11" 
                                       Foreground="#E0E0E0"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- QR Code Image -->
                        <Image x:Name="imgQRCode"
                               Stretch="Uniform"
                               Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- Visitor Info Display -->
                <Border x:Name="visitorInfoPanel"
                        Background="#F3E5F5"
                        CornerRadius="8"
                        Padding="15,15,15,15"
                        Visibility="Collapsed"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="txtDisplayName"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#673AB7"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="txtDisplayInfo"
                                   FontSize="12"
                                   Foreground="#9575CD"
                                   TextAlignment="Center"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="btnSave"
                            Content="💾 Save Image"
                            Width="130"
                            Height="40"
                            Background="#43A047"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            IsEnabled="False"
                            Click="BtnSave_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Cursor" Value="No"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnPrint"
                            Content="🖨️ Print"
                            Width="130"
                            Height="40"
                            Background="#FF6F00"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            IsEnabled="False"
                            Click="BtnPrint_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Cursor" Value="No"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>