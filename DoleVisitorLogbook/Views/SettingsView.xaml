<UserControl x:Class="DoleVisitorLogbook.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoleVisitorLogbook.Views"
             mc:Ignorable="d" 

             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Application Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0" Width="300">
            <TextBlock Text="Manage Users" FontWeight="Bold"/>
            <Button Content="Add User" Click="AddUser_Click" Margin="0,5,0,0"/>
            <Button Content="Remove User" Click="RemoveUser_Click" Margin="0,5,0,0"/>
            <Button Content="Change Password" Click="ChangePassword_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
