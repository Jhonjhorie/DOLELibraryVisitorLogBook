<Window x:Class="DoleVisitorLogbook.Views.AddEditVisitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Visitor Details"
        Height="650"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#5C6BC0"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#9FA8DA"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5C6BC0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#9FA8DA"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5C6BC0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#9FA8DA"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5C6BC0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F44336"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="15"
            Margin="15"
            BorderBrush="#5C6BC0"
            BorderThickness="0,4,0,0">
        <Border.Effect>
            <DropShadowEffect Color="#3F51B5" BlurRadius="20"
                              ShadowDepth="4" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="#5C6BC0"
                            CornerRadius="10"
                            Width="50"
                            Height="50"
                            Margin="0,0,15,0">
                        <TextBlock x:Name="txtHeaderIcon"
                                   Text="➕"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="txtWindowTitle"
                                   Text="Add New Visitor"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#5C6BC0"/>
                        <TextBlock Text="Fill in the visitor information below"
                                   FontSize="12"
                                   Foreground="#757575"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Form Fields -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Name -->
                    <TextBlock Text="👤 Full Name *" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtName" Style="{StaticResource TextBoxStyle}"/>
                    <TextBlock x:Name="txtNameError"
                               Text="Name is required"
                               Style="{StaticResource ErrorTextStyle}"
                               Visibility="Collapsed"/>

                    <!-- Gender -->
                    <TextBlock Text="⚥ Gender *" Style="{StaticResource LabelStyle}" Margin="0,15,0,6"/>
                    <ComboBox x:Name="cbGender" Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>
                    <TextBlock x:Name="txtGenderError"
                               Text="Gender is required"
                               Style="{StaticResource ErrorTextStyle}"
                               Visibility="Collapsed"/>

                    <!-- Client Type -->
                    <TextBlock Text="🏷️ Client Type *" Style="{StaticResource LabelStyle}" Margin="0,15,0,6"/>
                    <ComboBox x:Name="cbClientType" Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem Content="Student"/>
                        <ComboBoxItem Content="Employee"/>
                        <ComboBoxItem Content="Guest"/>
                    </ComboBox>
                    <TextBlock x:Name="txtClientTypeError"
                               Text="Client type is required"
                               Style="{StaticResource ErrorTextStyle}"
                               Visibility="Collapsed"/>

                    <!-- Office/Institution -->
                    <TextBlock Text="🏢 Office/Institution *" Style="{StaticResource LabelStyle}" Margin="0,15,0,6"/>
                    <TextBox x:Name="txtOffice" Style="{StaticResource TextBoxStyle}"/>
                    <TextBlock x:Name="txtOfficeError"
                               Text="Office/Institution is required"
                               Style="{StaticResource ErrorTextStyle}"
                               Visibility="Collapsed"/>

                    <!-- Purpose -->
                    <TextBlock Text="📝 Purpose of Visit *" Style="{StaticResource LabelStyle}" Margin="0,15,0,6"/>
                    <TextBox x:Name="txtPurpose"
                             Style="{StaticResource TextBoxStyle}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                    <TextBlock x:Name="txtPurposeError"
                               Text="Purpose is required"
                               Style="{StaticResource ErrorTextStyle}"
                               Visibility="Collapsed"/>

                    <!-- Time In Section -->
                    <TextBlock Text="🕐 Check-In Details" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="#5C6BC0" 
                               Margin="0,20,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Date In -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="📅 Date In *" Style="{StaticResource LabelStyle}"/>
                            <DatePicker x:Name="dpDateIn" Style="{StaticResource DatePickerStyle}"/>
                            <TextBlock x:Name="txtDateInError"
                                       Text="Date In is required"
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Time In -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="⏰ Time In *" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtTimeIn"
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Enter time (12:30 PM or 14:30)"/>
                            <TextBlock x:Name="txtTimeInError"
                                       Text="Time In is required"
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>

                    <!-- Time Out Section -->
                    <TextBlock Text="🕐 Check-Out Details (Optional)" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="#757575" 
                               Margin="0,20,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Date Out -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="📅 Date Out" Style="{StaticResource LabelStyle}"/>
                            <DatePicker x:Name="dpDateOut" Style="{StaticResource DatePickerStyle}"/>
                        </StackPanel>

                        <!-- Time Out -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="⏰ Time Out" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtTimeOut"
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Enter time (12:30 PM or 14:30)"/>
                            <TextBlock x:Name="txtTimeOutError"
                                       Text="Invalid time format"
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,25,0,0">
                <Button Content="✖ Cancel"
                        Width="130"
                        Height="42"
                        Background="White"
                        Foreground="#757575"
                        FontSize="13"
                        FontWeight="Bold"
                        BorderBrush="#BDBDBD"
                        BorderThickness="2"
                        Cursor="Hand"
                        Margin="0,0,15,0"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnSave"
                        Content="💾 Save Visitor"
                        Width="130"
                        Height="42"
                        Background="#5C6BC0"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3F51B5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>