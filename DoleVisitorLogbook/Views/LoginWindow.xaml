<Window x:Class="DoleVisitorLogbook.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DOLE Visitor Logbook - Login"
        Height="550"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect Color="#3F51B5" 
                              BlurRadius="30" 
                              ShadowDepth="0" 
                              Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Close Button -->
            <Border Grid.Row="0"
                    Background="#5C6BC0"
                    CornerRadius="15,15,0,0"
                    Height="50">
                <Grid>
                    <TextBlock Text="DOLE VISITOR LOGBOOK"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,40,0"/>

                    <Button Content="✕"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="BtnClose_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F44336"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Login Form -->
            <Grid Grid.Row="1" Margin="40,30,40,40">
                <StackPanel VerticalAlignment="Center">

                    <!-- Logo/Icon -->
                    <Border Background="#E8EAF6"
                            Width="80"
                            Height="80"
                            CornerRadius="40"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                        <TextBlock Text="🔐"
                                   FontSize="40"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Welcome Back!"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#3F51B5"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="Please login to continue"
                               FontSize="13"
                               Foreground="#757575"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Username Field -->
                    <TextBlock Text="Username"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#5C6BC0"
                               Margin="0,0,0,8"/>

                    <Border BorderBrush="#9FA8DA"
                            BorderThickness="2"
                            CornerRadius="6"
                            Margin="0,0,0,20">
                        <TextBox x:Name="txtUsername"
                                 Height="45"
                                 FontSize="14"
                                 Padding="15,0"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 KeyDown="Input_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Background" Value="#F5F5FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- Password Field -->
                    <TextBlock Text="Password"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#5C6BC0"
                               Margin="0,0,0,8"/>

                    <Border BorderBrush="#9FA8DA"
                            BorderThickness="2"
                            CornerRadius="6"
                            Margin="0,0,0,10">
                        <PasswordBox x:Name="txtPassword"
                                     Height="45"
                                     FontSize="14"
                                     Padding="15,0"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     KeyDown="Input_KeyDown"/>
                    </Border>

                    <!-- Error Message -->
                    <TextBlock x:Name="txtError"
                               Text=""
                               FontSize="11"
                               Foreground="#F44336"
                               TextWrapping="Wrap"
                               Margin="0,5,0,15"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                    <!-- Login Button -->
                    <Button x:Name="btnLogin"
                            Content="🔓 LOGIN"
                            Height="50"
                            Background="#5C6BC0"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,10,0,0"
                            Click="BtnLogin_Click"
                            Style="{StaticResource ModernButton}">
                        <Button.Effect>
                            <DropShadowEffect Color="#5C6BC0" 
                                              BlurRadius="10" 
                                              ShadowDepth="2" 
                                              Opacity="0.3"/>
                        </Button.Effect>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3F51B5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Footer -->
                    <TextBlock Text="Department of Labor and Employment"
                               FontSize="10"
                               Foreground="#BDBDBD"
                               HorizontalAlignment="Center"
                               Margin="0,30,0,0"/>

                    <TextBlock Text="© 2024 Visitor Management System"
                               FontSize="9"
                               Foreground="#E0E0E0"
                               HorizontalAlignment="Center"
                               Margin="0,3,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>