<UserControl x:Class="DoleVisitorLogbook.Views.Reports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoleVisitorLogbook.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Visitor Reports" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- DataGrid for reports -->
        <DataGrid x:Name="ReportsDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding timestamp}" Width="150"/>
                <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="*"/>
                <DataGridTextColumn Header="Time In" Binding="{Binding time_in}" Width="150"/>
                <DataGridTextColumn Header="Time Out" Binding="{Binding time_out}" Width="150"/>
                <DataGridTextColumn Header="Purpose" Binding="{Binding purpose}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Export Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Export to Excel" Click="ExportToExcel_Click" Width="120" Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
